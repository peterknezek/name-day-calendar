{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "DOM"
    ],
    "target": "es6",
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "declaration": true,
    "importHelpers": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declarationDir": "dist/types",
    "outDir": "dist/es",
    "rootDir": "src",
    "strict": true,
    "removeComments": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "data",
    "src/**/*.test.ts"
  ]
}
